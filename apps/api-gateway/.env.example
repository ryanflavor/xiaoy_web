# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ZMQ Configuration
ZMQ_BROKER_URL=tcp://localhost:5555
ZMQ_TIMEOUT=5000
ZMQ_RETRIES=3
ZMQ_HEARTBEAT_INTERVAL=2500

# Database Configuration (for authentication integration)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=trading_user
DB_PASSWORD=trading_password
DB_DATABASE=trading_system

# Python Integration
PYTHON_PATH=python3
PYTHON_SCRIPT_PATH=./python-scripts

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty